<div class="row mt-4">


  {{#if blogs}}
  <div class="col-md-6 project-list">
    <h3>Your Posts:</h3>

    {{#each blogs }}
    <div class="row mb-2">
      <div class="col-md-6">
        <h4><a href="/dashboard/edit/{{id}}">{{name}}</a></h4>
      </div>
            <div class="col-md-3">
              <button id="edit" type="submit" class="btn" data-id="{{id}}"><a class="link" href="/edit/{{id}}">EDIT</a></button>
        
      </div>
      <div class="col-md-3">
        <button id="delete" class="btn btn-sm btn-danger" data-id="{{id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<div class="row mt-4">
        <div class="col-md-3">
        <button id="add" class="btn"><a class="link" href="/dashboard/add">ADD POST</a></button>
      </div>
</div>

<script src="/js/profile.js"></script>
